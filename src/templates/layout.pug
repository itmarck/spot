doctype html
html(lang='en')
  head
    meta(charset='UTF-8')
    meta(name='viewport' content='width=device-width, initial-scale=1.0')
    link(rel='stylesheet' href='/static/global.css')
    link(rel='stylesheet' href='/static/base.css')
    block styles
    link(rel='icon' href='/favicon.svg')
    title #{title || message}
  body
    block body

    div
      div(version) v#{version}
      div#beta Beta

    if footer
      include footer.pug

    block scripts
