extends layout.pug

block styles
  link(rel='stylesheet', href='/static/home.css')

block body
  header
    h1 Spot
  main(class='content')
    p This is the home page
    br

    if user
      p Bienvenido, #{user.name}
      img(
        src=user.avatar
        alt='Avatar'
        width='48'
        height='48'
        style='border-radius: 50%'
      )

    if user
      p 
        span Has iniciado sesión como <br>
        span #{user.email}

    if user
      a(href='/logout') Cerrar sesión
    else
      a(href='/login') Iniciar sesión
